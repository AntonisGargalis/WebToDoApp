@model List<ToDo>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Date
        </th>
        <th>
            Time
        </th>
        <th>
            
        </th>
    </tr>
    <thead>
    <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.Description</td>
                <td>@obj.DatePick</td>
                <td>@obj.TimePick</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                     <a asp-controller="Home" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                     <a asp-controller="Home" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
            }
    </tbody>
    </thead>
    
</table>
<a asp-controller="Home" asp-action="Create" class="button" > Add new ToDo</a>
