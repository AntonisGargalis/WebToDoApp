@using System.Security.Claims
@model ToDo

<form  method="post" class="row" >
    <div asp-validation-summary="All"></div>
    <input asp-for="UserId" type="hidden" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
    <label asp-for="Name"></label>    
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>
    <label asp-for="Description"></label>
    <input asp-for="Description" />
    <label asp-for="DatePick"></label>
    <input type="date" asp-for="DatePick" name="DatePick" />
    <label asp-for="TimePick"></label>
    <input type="time" asp-for="TimePick" name="TimePick" />
    <button type="submit" >Submit</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary form-control">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}